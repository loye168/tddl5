<configuration scan="true" scanPeriod=" 5 seconds">
	<jmxConfigurator />
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{56} -
				%msg%n
			</pattern>
		</encoder>
	</appender>

	<logger name="com.alibaba.cobar.sample.SampleServer">
		<level value="info" />
	</logger>

	<logger name="com.alibaba.cobar.sample.handler.SampleQueryHandler">
		<level value="debug" />
	</logger>

	<root level="WARN">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>